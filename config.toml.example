# MiniMax TTS 插件配置文件示例
# 复制此文件为 config.toml 并填入你的配置

[plugin]
enabled = true

[components]
command_enabled = true        # 启用手动命令
tool_enabled = true           # 启用Tool(LLM调用标记TTS)
handler_enabled = true        # 启用EventHandler(执行TTS)
voice_clone_enabled = true    # 启用音色克隆命令

[minimax]
# API配置
base_url = "https://api.minimaxi.com/v1/t2a_v2"
api_key = "YOUR_MINIMAX_API_KEY_HERE"  # 请在此填入你的 MiniMax API Key

# 模型配置
model = "speech-2.6-hd"      # 可选: speech-2.6-hd, speech-2.6-turbo
voice_id = "YOUR_VOICE_ID"   # 请在此填入你的默认音色ID
timeout = 30                  # 请求超时(秒)
language_boost = "auto"       # 语言增强: auto, Chinese, English, Japanese等
output_format = "hex"         # 输出格式: hex(数据), url(链接)

# 音色参数
emotion = ""                  # 情绪: happy, sad, angry, calm, fluent等
text_normalization = false    # 文本规范化(数字朗读优化)
latex_read = false           # LaTeX公式朗读
speed = 1.0                  # 语速 [0.5-2.0]
vol = 1.0                    # 音量 [0-10]
pitch = 0                    # 音高 [-12~12]

# 音效器(高级)
voice_modify_pitch = 0       # 音高调整 [-100~100]
voice_modify_intensity = 0   # 强度调整 [-100~100]
voice_modify_timbre = 0      # 音色调整 [-100~100]
sound_effects = ""           # 音效: spacious_echo, auditorium_echo等

# 音频格式
sample_rate = 44100          # 采样率: 8000, 16000, 32000, 44100
bitrate = 256000             # 比特率(MP3): 32000, 64000, 128000, 256000
audio_format = "mp3"         # 格式: mp3, wav, flac, pcm
channel = 2                  # 声道: 1(单声道), 2(立体声)

[voice_clone]
test_text = "你好，这是音色克隆测试。欢迎使用 MiniMax 音色克隆功能！"
need_noise_reduction = false          # 启用降噪
need_volume_normalization = false     # 启用音量归一化
